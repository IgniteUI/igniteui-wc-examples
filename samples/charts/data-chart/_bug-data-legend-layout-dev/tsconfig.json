{
  "compilerOptions": {
        "sourceMap": true,
        "downlevelIteration": true,
        "preserveConstEnums": false,
        "noImplicitThis": false,
        "noUnusedLocals": false,

      "noImplicitReturns": true,    
      "esModuleInterop": true,    
      "resolveJsonModule": true,

  "noImplicitAny": false,
      "declarationDir": "dist/types",
      "moduleResolution": "node",    
      "declaration": true,
      "target": "es2015",
      "module": "es2015",
 

    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
            "igniteui-core/*": ["src/ig/igniteui-core/*"],
            "igniteui-charts/*": ["src/ig/igniteui-charts/*"],
            "igniteui-gauges/*": ["src/ig/igniteui-gauges/*"],
            "igniteui-maps/*": ["src/ig/igniteui-maps/*"],
            "igniteui-layouts/*": ["src/ig/igniteui-layouts/*"]
     }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}