{
  "compilerOptions": {
    "target": "es5",
    "module": "esNext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "exclude": ["browser", "node_modules/**", "dist", "github", "templates"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "node_modules/**/*.js",
      "**/odatajs-4.0.0.js",
      "templates",
      "tasks",
      "src/samples/*.*",
      "src/images/*.*",
      "src/assets/*.*",
      "src/utilities/WorldLocations.ts"
    ]
  },
}
