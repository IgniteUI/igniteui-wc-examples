{
  "compilerOptions": {
    "target": "es5",
    "module": "esNext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2017", "dom", "DOM.Iterable"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules/**",
    "browser/dist",
    "browser/tasks",
    "browser/templates"
  ],
  "linterOptions": {
    "exclude": [
      "browser/config/**/*.js",
      "node_modules/**/*.ts",
      "node_modules/**/*.js",
      "**/odatajs-4.0.0.js",
      "browser/templates",
      "browser/tasks",
      "browser/src/samples/*.*",
      "browser/src/images/*.*",
      "browser/src/assets/*.*",
      "browser/src/utilities/WorldLocations.ts"
    ]
  },
}
